<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="view.AddActivity">
    <TextView
            android:text="추가하기"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.128"
            app:layout_constraintVertical_bias="0.058" android:id="@+id/textView"/>
    <RadioGroup
            android:id="@+id/wrapClassify"
            android:orientation="horizontal"
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.168">
        <RadioButton
                android:id="@+id/addExpense"
                android:text="지출"
                android:textSize="18sp"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteY="144dp"
                tools:layout_editor_absoluteX="300dp"/>
        <RadioButton
                android:id="@+id/addIncome"
                android:text="수입"
                android:textSize="18sp"
                android:layout_width="225dp"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteY="144dp"
                tools:layout_editor_absoluteX="75dp"/>
    </RadioGroup>
    <EditText
            android:id="@+id/addTitle"
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="제목(용도)"
            android:ems="10"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.236"/>
    <TextView
            android:text="날짜"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.16"
            app:layout_constraintVertical_bias="0.324"/>
    <DatePicker
            android:id="@+id/datePickerOfAdd"
            android:layout_width="320dp"
            android:layout_height="200dp"
            android:calendarViewShown="false"
            android:datePickerMode="spinner"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.398"/>
    <EditText
            android:id="@+id/addAmount"
            android:layout_width="450dp"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:hint="금액"
            android:ems="10"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.588"/>
    <EditText
            android:id="@+id/addMemo"
            android:layout_width="450dp"
            android:layout_height="100dp"
            android:inputType="text"
            android:hint="메모"
            android:ems="10"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.715"/>
    <Button
            android:id="@+id/addInsertBtn"
            android:text="추가"
            android:layout_width="150dp"
            android:layout_height="60dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.276"
            app:layout_constraintVertical_bias="0.86"/>
    <Button
            android:id="@+id/addBackBtn"
            android:layout_height="60dp"
            android:text="메뉴로"
            android:layout_width="150dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.723"
            app:layout_constraintVertical_bias="0.86"/>
</androidx.constraintlayout.widget.ConstraintLayout>