<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="회원 정보 관리 체계"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="0.091"
            android:id="@+id/appTitle"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="300dp"
            android:layout_height="553dp"
            app:layout_constraintTop_toBottomOf="@+id/appTitle" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent">
        <Button
                android:id="@+id/addMember"
                android:text="회원 추가"
                android:textSize="25sp"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
        />
        <Button
                android:id="@+id/delMember"
                android:text="회원 삭제"
                android:textSize="25sp"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
        />
        <Button
                android:id="@+id/searchMember"
                android:text="회원 검색"
                android:textSize="25sp"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
        />
        <Button
                android:id="@+id/editMember"
                android:text="회원 수정"
                android:textSize="25sp"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
        />
        <Button
                android:id="@+id/allMember"
                android:text="모든 회원 보기"
                android:textSize="25sp"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
        />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>