<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SearchDetailActivity">

    <EditText
            android:layout_width="141dp"
            android:layout_height="44dp"
            android:inputType="textPersonName"
            android:text=""
            android:textAlignment="center"
            android:enabled="false"
            android:ems="10"
            android:id="@+id/editTextTextPersonName"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.307"
            app:layout_constraintVertical_bias="0.078"/>
    <TextView
            android:text="님의 상세 정보"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.588"
            app:layout_constraintVertical_bias="0.087"/>
    <TableLayout
            android:layout_width="500dp"
            android:layout_height="500dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.419" android:id="@+id/tableLayout">

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        >
            <TextView
                    android:text="회원번호"
                    android:textAlignment="center"
                    android:textSize="17sp"
                    android:padding="15dp"
            />
            <TextView
                    android:id="@+id/memberNumDetail"
                    android:textAlignment="center"
                    android:text=""
                    android:textSize="17sp"
                    android:padding="15dp"
                    android:layout_width="409dp"
            />
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        >
            <TextView
                    android:text="성명"
                    android:textAlignment="center"
                    android:textSize="17sp"
                    android:padding="15dp"
            />
            <TextView
                    android:id="@+id/memberNameDetail"
                    android:textAlignment="center"
                    android:text=""
                    android:textSize="17sp"
                    android:padding="15dp"
                    android:layout_width="409dp"
            />
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        >
            <TextView
                    android:text="나이"
                    android:textAlignment="center"
                    android:textSize="17sp"
                    android:padding="15dp"
            />
            <TextView
                    android:id="@+id/memberAgeDetail"
                    android:textAlignment="center"
                    android:text=""
                    android:textSize="17sp"
                    android:padding="15dp"
                    android:layout_width="409dp"
            />
        </TableRow>
        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
        >
            <TextView
                    android:text="주소"
                    android:textAlignment="center"
                    android:textSize="17sp"
                    android:padding="15dp"
            />
            <TextView
                    android:id="@+id/memberLocationDetail"
                    android:textAlignment="center"
                    android:text=""
                    android:textSize="17sp"
                    android:padding="15dp"
                    android:layout_width="409dp"/>
        </TableRow>
    </TableLayout>
    <Button
            android:id="@+id/goBackSearch"
            android:text="회원검색으로 돌아가기"
            android:layout_width="290dp"
            android:layout_height="60dp"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.854"/>
</androidx.constraintlayout.widget.ConstraintLayout>